{
  "name": "userscript-metadata-webpack-plugin",
  "version": "0.2.1",
  "description": "A webpack plugin to generate userscript metadata and prepend to js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/shim.cjs"
    },
    "./*": "./"
  },
  "files": [
    "./dist/",
    "package.json"
  ],
  "prettier": {
    "printWidth": 120,
    "useTabs": false,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "all",
    "endOfLine": "lf",
    "semi": true
  },
  "scripts": {
    "format": "prettier -w ./",
    "prepublishOnly": "tsc  --declaration false && tsc --outdir dist/esm --module es2020",
    "build": "webpack -c example/webpack.config.prod.js",
    "test": "jest"
  },
  "repository": {
    "url": "https://github.com/Trim21/userscript-metadata-webpack-plugin",
    "type": "git"
  },
  "keywords": [
    "webpack",
    "userscript",
    "plugin",
    "metadata"
  ],
  "author": {
    "name": "Trim21",
    "email": "trim21me@gmail.com"
  },
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "8.26.0",
    "eslint-config-standard": "17.0.0",
    "eslint-config-standard-with-typescript": "^23.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-n": "15.3.0",
    "eslint-plugin-promise": "6.1.1",
    "eslint-plugin-standard": "5.0.0",
    "prettier": "^2.7.1",
    "typescript": "^4.8.4",
    "webpack": "^5.26.0",
    "webpack-cli": "^4.5.0"
  },
  "dependencies": {
    "webpack-sources": "^3.2.0"
  },
  "peerDependencies": {
    "webpack": "^5.0.0"
  }
}
